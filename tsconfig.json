{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "es6"
  },
  "include": [
    "./src/**/*",
    ".eslintrc.js"
  ],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "docs/",
    "excludePrivate": true,
    "disableSources": true,
    "listInvalidSymbolLinks": true
  }
}
