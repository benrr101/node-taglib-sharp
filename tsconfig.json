{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "es6"
  },
  "include": [
    "./src/**/*"
  ],
  "typedocOptions": {
    "inputFiles": ["./src"],
    "mode": "modules",
    "out": "docs/",
    "excludePrivate": true
  }
}